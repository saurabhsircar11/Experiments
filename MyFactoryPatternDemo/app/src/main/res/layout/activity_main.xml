<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.root.myfactorypatterndemo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Chip Factory"
        android:id="@+id/tvWelcomeText"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:text="Lays Indian Masala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWelcomeText"
        android:layout_marginTop="35dp"
        android:id="@+id/btnLaysIndianMasala"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="24dp"
        android:textAllCaps="false"
        />

    <Button
        android:text="Lays Onion And Cheese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLaysIndianMasala"
        android:layout_alignLeft="@+id/btnLaysIndianMasala"
        android:layout_alignStart="@+id/btnLaysIndianMasala"
        android:layout_marginTop="37dp"
        android:id="@+id/btnLaysOnionCheese"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="24dp"
        android:textAllCaps="false"/>

    <Button
        android:text="Lays Salted Special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnLaysOnionCheese"
        android:layout_alignStart="@+id/btnLaysOnionCheese"
        android:id="@+id/btnLaysSaltedSpecial"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="24dp"
        android:textAllCaps="false"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLaysSaltedSpecial"
        android:layout_marginTop="49dp"
        android:id="@+id/tvDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"/>

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/btnNext" />

</RelativeLayout>
